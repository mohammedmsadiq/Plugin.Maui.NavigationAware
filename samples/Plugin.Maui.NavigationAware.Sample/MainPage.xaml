<?xml version="1.0" encoding="utf-8" ?>
<local:NavigationAwarePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Plugin.Maui.NavigationAware;assembly=Plugin.Maui.NavigationAware"
             x:Class="Plugin.Maui.NavigationAware.Sample.MainPage"
             Title="Navigation Aware Plugin">

    <VerticalStackLayout Padding="30" Spacing="25">
        <Label 
            Text="Welcome to NavigationAware Plugin!"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />
        
        <Label 
            Text="This sample demonstrates navigation awareness similar to Prism."
            FontSize="16"
            HorizontalOptions="Center" />
        
        <Button 
            x:Name="NavigateButton"
            Text="Navigate to Second Page"
            Clicked="OnNavigateClicked"
            HorizontalOptions="Center" />
        
        <Button 
            x:Name="NavigateToViewModelPageButton"
            Text="Navigate to ViewModel Locator Demo"
            Clicked="OnNavigateToViewModelPageClicked"
            HorizontalOptions="Center" />
        
        <Label 
            x:Name="StatusLabel"
            Text="Navigation events will appear here..."
            FontSize="14"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</local:NavigationAwarePage>
