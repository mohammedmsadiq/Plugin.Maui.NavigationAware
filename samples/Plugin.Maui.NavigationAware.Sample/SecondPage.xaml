<?xml version="1.0" encoding="utf-8" ?>
<local:NavigationAwarePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Plugin.Maui.NavigationAware;assembly=Plugin.Maui.NavigationAware"
             x:Class="Plugin.Maui.NavigationAware.Sample.SecondPage"
             Title="Second Page">

    <VerticalStackLayout Padding="30" Spacing="25">
        <Label 
            Text="Second Page"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />
        
        <Label 
            Text="This page receives navigation parameters from the MainPage."
            FontSize="16"
            HorizontalOptions="Center" />
        
        <Button 
            x:Name="GoBackButton"
            Text="Go Back"
            Clicked="OnGoBackClicked"
            HorizontalOptions="Center" />
        
        <Label 
            x:Name="StatusLabel"
            Text="Navigation events will appear here..."
            FontSize="14"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</local:NavigationAwarePage>
