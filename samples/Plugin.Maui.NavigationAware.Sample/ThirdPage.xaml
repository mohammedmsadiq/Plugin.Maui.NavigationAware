<?xml version="1.0" encoding="utf-8" ?>
<local:NavigationAwarePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Plugin.Maui.NavigationAware;assembly=Plugin.Maui.NavigationAware"
             xmlns:nav="clr-namespace:Plugin.Maui.NavigationAware;assembly=Plugin.Maui.NavigationAware"
             x:Class="Plugin.Maui.NavigationAware.Sample.ThirdPage"
             nav:ViewModelLocator.AutoWireViewModel="True"
             Title="ViewModel Locator Demo">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="ViewModel Locator Example"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label
                Text="This page demonstrates automatic ViewModel binding using the ViewModelLocator."
                FontSize="14"
                HorizontalOptions="Center"
                TextColor="Gray" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,10" />

            <Label
                Text="Status:"
                FontSize="18"
                FontAttributes="Bold" />

            <Label
                x:Name="StatusLabel"
                Text="{Binding StatusMessage}"
                FontSize="16"
                TextColor="Green" />

            <Label
                Text="Enter a message:"
                FontSize="14"
                Margin="0,20,0,0" />

            <Entry
                x:Name="MessageEntry"
                Text="{Binding InputMessage}"
                Placeholder="Type your message here"
                FontSize="16" />

            <Button
                x:Name="UpdateButton"
                Text="Update Status"
                Clicked="OnUpdateStatusClicked"
                HorizontalOptions="Center"
                Margin="0,10,0,0" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,20" />

            <Label
                Text="Navigation:"
                FontSize="18"
                FontAttributes="Bold" />

            <Button
                x:Name="GoBackButton"
                Text="Go Back"
                Clicked="OnGoBackClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</local:NavigationAwarePage>
